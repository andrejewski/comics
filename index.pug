  body
    nav
      h1 Comics
      ul#index.index
        for comic in comics
          li
            a(href='#'+comic.filename)= comic.filename
            | &nbsp;
            time(time=comic.createdAt, title=moment(comic.createdAt).format('LLLL'))= moment(comic.createdAt).format('MMM YYYY')
    main
      ul#index-ghost.index
        for comic in comics
          li
            a(href='#'+comic.filename)= comic.filename
            | &nbsp;
            time(time=comic.createdAt, title=moment(comic.createdAt).format('LLLL'))= moment(comic.createdAt).format('MMM YYYY')
      #list
        for comic in comics
          .comic(id=comic.filename)
            img(src='comics/'+comic.filename)
    
